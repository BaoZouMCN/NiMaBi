<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- EventDefinition business object -->
    <bean id="eventDefinitionBO" class="com.baozou.NiMaBi.Database.BusinessObject.EventDefinitionBOImpl" >
        <property name="eventDefinitionDAO" ref="eventDefinitionDAO" />
    </bean>
    <!-- EventDefinition Data Access Object -->
    <bean id="eventDefinitionDAO" class="com.baozou.NiMaBi.Database.DAO.EventDefinitionDAOImpl" >
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

</beans>